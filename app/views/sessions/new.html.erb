<h1>Login</h1>

<section class="signup">
<%= form_tag '/login' do %>
  <p>
    <%= label_tag :name, "Password:" %>
    <%= text_field_tag :email %>
  </p>
  <p>
    <%= label_tag :name, "Password:" %>
    <%= password_field_tag :password %>
  </p>
  <%= submit_tag "Submit" %>

<% end %>
<section class="signup">